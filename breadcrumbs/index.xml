<Module>
    <ModulePrefs title="Breadcrumbs"
                 author="WSO2 Gadget Server"
                 scrolling="false"
                 tags="breadcrumbs,data,visualization"
                 description="EMM Dashboard Breadcrumbs">
        <Require feature="pubsub-2"/>
        <Require feature="dynamic-height" />
        <Require feature="dynamic-width" />
    </ModulePrefs>
    <Content type="html">
        <![CDATA[
        <html>
            <head>
                <meta charset="utf-8">
                <title>Breadcrumbs</title>

                <!-- CSS -->
                <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css"/>
                <link rel="stylesheet" href="css/style.css" type="text/css"/>
                <link rel="stylesheet" href="css/font-wso2.min.css" type="text/css"/>

                <!-- JS -->
                <script src="js/jquery.js"></script>
                <script src="js/mustache.min.js"></script>
                <script src="js/gadgetconf.js"></script>
                <script src="js/analyticsUtils.js"></script>
                <script src="js/main.js"></script>
            </head>
            <body>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                            <span>Filtered by:</span>
                            <div id="breadcrumbs"></div>
                        </div>
                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                            <div id="devices"></div>
                        </div>
                    </div>
                </div>
            </body>
        </html>
        ]]>
    </Content>
</Module>


